@{
    ViewData["Title"] = "Invoice List";
}

<div>
    <div class="row my-4">
        <div class="col-6"><h2>Product List</h2></div>
        <div class="col-6 text-end"><a class="btn btn-primary" asp-controller="Invoice" asp-action="Create">Create New Invoice</a></div>

    </div>
    <table class="table table-striped table-bordered" id="tblData" style="width:100%">
        <thead>
            <tr>
                <th>Invoice No</th>
                <th>Date</th>              
                <th>Customer Name</th>
                <th>Phone</th>
                <th>Total</th>
                <th>Paid</th>
                <th>Status</th>
                <th>Payable</th>
                <th></th>
            </tr>
        </thead>

    </table>
</div>

@section Scripts{
    <script src="~/js/invoice.js"></script>
}

