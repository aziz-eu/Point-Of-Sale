@{
    ViewData["Title"] = "Products";
}

<div>
    <div class="row my-4">
        <div class="col-6" id="productListTitle"><h2>Product List</h2></div>
        <div class="col-6 customer-info-hide" id="lowStockTitle"><h2>Low Stock</h2></div>
        <div class="col-6 customer-info-hide" id="outOfStock"><h2>Out Of Stock</h2></div>
        
        <div class="col-6 text-end"><a class="btn btn-primary" asp-controller="Product" asp-action="Upsert">Add New Product</a></div>

    </div>
    <table class="table table-striped table-bordered" id="tblData" style="width:100%">
        <thead>
            <tr>
                <th>Name</th>
                <th>Company</th>
                <th>Category</th>
                <th>Quantity</th>
                <th>Measure</th>
                <th>Price</th>            

                <td></td>
            </tr>
        </thead>

    </table>
</div>

@section Scripts{
    <script src="~/js/product.js"></script>
}

