@{
    ViewData["Title"] = "Category";
}

<div>
    <div class="row my-4">
        <div class="col-6"><h2>Category List</h2></div>
        <div class="col-6 text-end"><a class="btn btn-primary" asp-controller="Category" asp-action="Upsert">Add New Category</a></div>

    </div>
    <table class="table table-striped" id="tblData" style="width:100%">
        <thead>
            <tr>
                <th>Category</th>
                <th>Description</th>
                <td></td>
            </tr>
        </thead>

    </table>
</div>

@section Scripts{
    <script src="~/js/category.js"></script>
}
