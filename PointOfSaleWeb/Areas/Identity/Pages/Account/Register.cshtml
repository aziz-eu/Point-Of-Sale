@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-8">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Create a new account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="py-2">
                <label asp-for="Input.Name"></label>
                <input asp-for="Input.Name" class="form-control" autocomplete="username" aria-required="true" />
                
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>

            <div class="py-2">
                <label asp-for="Input.PhoneNumber"></label>
                <input asp-for="Input.PhoneNumber" class="form-control" autocomplete="username" placeholder="Optional" aria-required="true" />          
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>

            <div class="py-2">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
            
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="fpy-2">
                <label asp-for="Input.Address"></label>
                <input asp-for="Input.Address" class="form-control" autocomplete="username" placeholder="Optional" aria-required="true" />
       
                <span asp-validation-for="Input.Address" class="text-danger"></span>
            </div>

              <div class="py-2">
                <label asp-for="Input.Role"></label>
                <select asp-for="Input.Role" asp-items="@Model.Input.RoleList" class="form-select">
                    <option disabled selected>--Select Role-- </option>
                </select>
               
                <span asp-validation-for="Input.Role" class="text-danger"></span>
            </div>

            <div class="py-2">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
              
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="py-2">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />

                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
  

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
